{
    "env": {
        "_defaultIncludePath": [
            "${workspaceFolder}/include/**"
        ], 
        "_defines": []
    },
    "configurations": [
        {
            "name": "Win32",
            "includePath": [
                "${_defaultIncludePath}"
            ],
            "defines": ["${_defines}"],
            "intelliSenseMode": "${default}",
            "cStandard": "c11",
            "cppStandard": "c++17",
            "configurationProvider": "ms-vscode.cmake-tools",
            "compileCommands": "${workspaceFolder}/build/compile_commands.json"
        },
        {
            "name": "Mac",
            "includePath": [
                "${_defaultIncludePath}"
            ],
            "defines": ["${_defines}"],
            "macFrameworkPath": [
                "/System/Library/Frameworks",
                "/Library/Frameworks"
            ],
            "intelliSenseMode": "${default}",
            "cStandard": "c11",
            "cppStandard": "c++17",
            "configurationProvider": "ms-vscode.cmake-tools",
            "compileCommands": "${workspaceFolder}/build/compile_commands.json"
        }
    ],
    "version": 4
}